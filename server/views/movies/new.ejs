<% layout('layout/boilerplate') %>
    <h2>Add New Movie</h2>
    <form method="post" action="/movies">
        <div class="form-group">
            <label for="exampleInputEmail1">id</label>
            <input type="title" class="form-control" id="title" aria-describedby="emailHelp" name="movie[title]">

        </div>
        <div class="form-group">
            <label for="res">Resolution</label>
            <input type="text" class="form-control" id="res" placeholder="" name="movie[res]">
        </div>

        <div class="form-group mb-3">
            <label for="link">Link</label>
            <input type="text" class="form-control" id="link" name="movie[link]">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>